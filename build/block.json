{
  "apiVersion": 2,
  "name": "andika-block/andika",
  "version": "0.1.0",
  "title": "Andika",
  "category": "text",
  "icon": "lightbulb",
  "description": "Enhanced paragraph block with AI-powered text generation.",
  "keywords": [
    "text",
    "paragraph",
    "AI",
    "andika",
    "openai"
  ],
  "textdomain": "andika",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "attributes": {
    "content": {
      "type": "string",
      "source": "html",
      "selector": "p",
      "default": ""
    },
    "alignment": {
      "type": "string"
    },
    "fontSize": {
      "type": "string"
    },
    "backgroundColor": {
      "type": "string"
    },
    "textColor": {
      "type": "string"
    },
    "lineHeight": {
      "type": "number"
    },
    "andikaTextLength": {
      "type": "string",
      "default": "medium"
    }
  },
  "supports": {
    "align": true,
    "color": {
      "background": true,
      "text": true,
      "gradients": true,
      "link": false
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true
    },
    "spacing": {
      "padding": true
    },
    "className": true
  }
}